
public class Arena {

	private Personaje p1;
	private Personaje p2;

	public Arena(Personaje p1, Personaje p2) {
		this.p1 = p1;
		this.p2 = p2;

	}

	public Personaje combate() {
		Personaje ganador = null;
		boolean acabado = false;
		
			Personaje pi = null;
			Personaje pf = null;
			if (p1.getIniciativa()>= p2.getIniciativa()) {
				pi = p1;
				pf = p2;
				
			}else {
				pi = p2;
				pf = p1;
			}
			
			do {
			
				pi.atacar(pf);
				if (pf.getSalud() <= 0) {
					
					return pi;
					
				} 
					pf.atacar(pi);
				
				
				if (pf.getSalud() <= 0) {
					
					return pi;
					
				} 
					
				
				
				
			
		} while (true);
		
		
	}

}
